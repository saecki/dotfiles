set incremental-search true
set font "JetBrainsMonoNerdFontComplete-Regular normal 11"

map <C-l> nohlsearch

map <C-=> zoom in
map <C--> zoom out

map G scroll bottom

# <C-Up> and <C-down> does smooth scrolling
map k feedkeys "<C-Up>"
map j feedkeys "<C-Down>"

# sync with system clipboard
set selection-clipboard "clipboard"

# Search and Links
set highlight-active-color "rgba(255, 117, 85, 0.5)" # "#ff7555"
set highlight-color "rgba(250, 189, 47, 0.5)" # "#fabd2f"

